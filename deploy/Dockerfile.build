# Dockerfile to build Linux executable
FROM rust:1.75-slim as builder

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy source code
COPY . .

# Build the executable
RUN cargo build --release --bin websocket-trader

# Extract the executable
FROM scratch as export
COPY --from=builder /app/target/release/websocket-trader /websocket-trader
